 <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem;height:24rem">
                        <img class="card-img-top mx-auto d-block" style="max-height:14rem;max-width:12rem"; src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap">
                        <div class="card-body align-self-bottom">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.Description}}</p>
                            <a href="#" class="btn btn-warning align-self-bottom">Add to Cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
    
        </div>
    </section>